#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    int opcion;
    float b,a,A,lado,radio,P=3.1416;
    do
    {
     cout<<"MENU"<<endl;
		cout<<"1.Area del triangulo"<<endl;
		cout<<"2.Area del cuadrado"<<endl;
		cout<<"3.Area de la circunferencia"<<endl;
		cout<<"0.salir"<<endl;
		cin>>opcion;
		switch(opcion)
		{
		 case 1:
		 cout<<"Ingrese la base: ";
		 cin>>b;
		 cout<<"Ingrese la altura: ";
		 cin>>lado;
		 A=pow(lado,2);
		 cout<<"el  Area es: "<<A<<endl;
		 break;
		 case 2:
		 cout<<"Ingrese el lado: ";
		 cin>>lado;
		 A=pow(lado,2);
		 cout<<"el  Area es: "<<A<<endl;
		 break;
		 case 3:
		 cout<<"Ingrese el Radio: ";
		 cin>>radio;
		 A= P*radio*radio;
		 cout<<"el  Area es: "<<A<<endl;
		 break;
		 case 0:
		 cout<<"Salir: ";
		 break;
		 default:
		 cout<<"error"<<endl;
		}
    }while(opcion!=0);
    
    

    return 0;
}
