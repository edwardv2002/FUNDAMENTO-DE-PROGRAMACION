#include <iostream>
using namespace std;

int main() {
    float precioUnitario, cantidad, porcentajeDescuento;
    float subtotal, montoDescuento, totalPagar;

    cout << "Ingrese el precio unitario del producto: ";
    cin >> precioUnitario;

    cout << "Ingrese la cantidad pedida: ";
    cin >> cantidad;

    cout << "Ingrese el porcentaje de descuento (0 si no hay): ";
    cin >> porcentajeDescuento;

    subtotal = precioUnitario * cantidad;
    montoDescuento = subtotal * (porcentajeDescuento / 100);
    totalPagar = subtotal - montoDescuento;

    cout << "Subtotal: " << subtotal << endl;
    cout << "Monto del descuento: " << montoDescuento << endl;
    cout << "Total a pagar: " << totalPagar << endl;

    return 0;
}
