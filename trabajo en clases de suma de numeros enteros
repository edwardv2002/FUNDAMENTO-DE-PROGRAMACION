
#include <iostream>
using namespace std;
int main()
{
    int N, d;
    float suma=0;
    cout<<"ingrese el numero: ";
    cin>>N;
    int Nbackup=N;
    while(N>0){
        d = N % 10;
        N = N / 10;
        suma = suma + d;
    }
    cout<<"la suma de los digitos de: "<<Nbackup<<" es: "<<suma;
    return 0;
}
